@model ChequebookRegistry.Models.ViewModels.CreateViewModel


@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Cheques</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Payee" class="control-label"></label><br />
                <select asp-for="Payee" asp-items="Model.PayeesList" class="form-control">--Please select Payee--</select>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateDue" class="control-label"></label>
                <input asp-for="DateDue" class="form-control mydatepicker" />
                <span asp-validation-for="DateDue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Justification" class="control-label"></label>
                <input asp-for="Justification" class="form-control" />
                <span asp-validation-for="Justification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RelatedCustomer" class="control-label">Related Customer</label><br />
                <select asp-for="RelatedCustomer" asp-items="Model.CustomersList" class="form-control"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
